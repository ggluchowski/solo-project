{
    "name": "fer-07-project",
    "version": "1.0.0",
    "description": "",
    "main": "index.html",
    "scripts": {
        "init-project": "npm install && npm-run-all init:*",
        "init:dirs": "mkdirp docs src/sass src/css src/vendor src/images src/js src/sass/components src/sass/pages src/sass/sections",
        "init:files": "touch README.md src/index.html src/sass/style.scss src/js/script.js src/sass/_layout.scss src/sass/_mixins.scss src/sass/_normalize.scss src/sass/_variables.scss src/styleguide.html",
        "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
        "init:gitignore:custom": "echo \"dist\" >> .gitignore",
        "test": "npm-run-all test:*",
        "test:html": "html-validate src/*.html",
        "test:js": "eslint src/js/",
        "test:scss": "stylelint src/sass/",
        "build": "npm-run-all build:* test delete-file",
        "build:clean": "rimraf docs && mkdirp docs",
        "build:copy": "copyfiles -a -u 1 -e \"**/sass/**/*\" -e \"**/.gitkeep\" \"src/**/*\" docs",
        "build:sass": "node-sass --output-style compact -o docs/css src/sass",
        "build:autoprefixer": "postcss docs/css/*.css --use autoprefixer -d docs/css",
        "build-dev": "npm-run-all build-dev:sass build:autoprefixer",
        "build-dev:sass": "node-sass --output-style expanded --source-map true -o docs/css src/sass",
        "cssmin": "cleancss -o docs/css/style.min.css docs/css/style.css",
        "uglify": "uglifyjs -o docs/js/script.min.js docs/js/script.js",
        "imagemin": "npm run imagemin --out-dir=docs/images/ src/images/**/*.{png,jpg,gif}",
        "build:min": "npm-run-all cssmin uglify",
        "watch": "npm-run-all build build-dev -p watch:*",
        "watch:browsersync": "browser-sync start --server docs --files \"docs/**/*\" --ignore \"docs/db/**/*\"",
        "watch:sassprefixer": "onchange \"src/sass/**/*.scss\" -- npm run build-dev",
        "watch:copy": "onchange -e \"**/sass/**/*\" -e \"**/.gitkeep\" \"src/**/*\" -- copyfiles -a -u 1 {{changed}} docs",
        "delete-file": "rm -f docs/css/style.css docs/js/script.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "autoprefixer": "^10.2.4",
        "browser-sync": "^2.26.3",
        "clean-css-cli": "^5.3.3",
        "compress-images": "^1.9.9",
        "copyfiles": "^2.1.0",
        "eslint": "^5.14.1",
        "globstar": "^1.0.0",
        "html-validate": "^2.8.0",
        "imagemin-cli": "^7.0.0",
        "mkdirp": "^0.5.1",
        "node-sass": "^4.11.0",
        "npm-run-all": "^4.1.5",
        "onchange": "^5.2.0",
        "postcss": "^8.2.6",
        "postcss-cli": "^8.3.1",
        "rimraf": "^3.0.2",
        "stylelint": "^9.10.1",
        "stylelint-scss": "^3.5.4",
        "uglifyjs": "^2.4.11"
    },
    "dependencies": {
        "json-server": "^0.16.3"
    }
}
